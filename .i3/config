#.......
# Font
#.......

set $ft -xos4-terminesspowerline-medium-r-normal--12-120-72-72-c-60-iso10646-1
font $ft

#..........
# Look
#..........

new_window 1pixel
new_float 1pixel

# Hybrid colors
set $back               #1d1F21
set $black              #282A2E
set $grey               #373B41
set $lightgrey          #707880
set $white              #C5C8C6
set $yellow             #F0C674
set $red                #CC6666

#class                  border      backgr.     text        split
client.focused          $yellow     $yellow     $black      $red
client.focused_inactive $grey       $grey       $lightgrey  $red
client.unfocused        $grey       $grey       $lightgrey  $red
client.urgent           $red        $red        $black      $red
client.background       $back

#..........
# Applications
#..........

# Principal mod key (Super = Win key)
# mod1 = Alt (xmodmap to show)
# mod4 = Winkey (xmodmap to show)
set $mod Mod4
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Return exec urxvt    # terminal
bindsym Mod1+Ctrl+g exec gcolor2  # Color picker
bindsym Mod1+Ctrl+h exec ~/.i3/i3_focus_or_run.sh -t htop ~/bin/terminal htop
bindsym Mod1+Ctrl+i exec ~/.i3/i3_focus_or_run.sh -t weechat ~/bin/terminal weechat
bindsym Mod1+Ctrl+m exec ~/.i3/i3_focus_or_run.sh -c Iceweasel iceweasel
bindsym Mod1+Ctrl+t exec ~/.i3/i3_focus_or_run.sh -t mldonkey ~/bin/terminal mldonkey

# start dmenu (a program launcher)
bindsym $mod+x exec dmenu_run -fn ohsnap-medium-11 -nb "$back" -nf "$white" -sb "$yellow" -sf "$black"

# Media keys
# En Manzanita ya lo hace solo el pbbuttons
#bindsym XF86AudioRaiseVolume exec --no-startud-id "amixer sset Master 5%+"
